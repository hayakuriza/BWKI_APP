<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="resultScreenModel" type="de.bwki.blumenidentifikator.ResultScreenModel"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="321dp"
                android:layout_height="321dp" app:srcCompat="@android:color/background_light"
                android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent" style="@style/imageView"
                android:rotation="90" android:scaleType="fitCenter" android:adjustViewBounds="false"
                android:contentDescription="@string/flower_image"/>
        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:id="@+id/scrollView2">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:id="@+id/linearLayout">
                <TextView
                        android:text="@{resultScreenModel.resultText1}"
                        android:id="@+id/result_object_1"
                        tools:layout_conversion_absoluteHeight="24dp" tools:layout_editor_absoluteY="369dp"
                        tools:layout_editor_absoluteX="16dp" tools:layout_conversion_absoluteWidth="74dp"
                        style="@style/ResultText"/>
                <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar1" android:scrollbarStyle="outsideInset"
                        android:visibility="visible" android:max="100" android:progress="@{resultScreenModel.progress1}"/>
                <TextView
                        android:text="@{resultScreenModel.resultText2}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result_object_2" tools:layout_conversion_absoluteHeight="19dp"
                        tools:layout_editor_absoluteY="393dp" tools:layout_editor_absoluteX="8dp"
                        tools:layout_conversion_absoluteWidth="59dp"
                        style="@style/ResultText" android:visibility="gone"/>
                <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar2" android:scrollbarStyle="outsideInset"
                        android:visibility="gone" android:max="100" android:progress="@{resultScreenModel.progress2}"/>
                <TextView
                        android:text="@{resultScreenModel.resultText3}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/result_object_3" style="@style/ResultText" android:visibility="gone"/>
                <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/progressBar3" android:scrollbarStyle="outsideInset"
                        android:visibility="gone" android:max="100" android:progress="@{resultScreenModel.progress3}"/>

	            <TextView
		            android:id="@+id/result_object_4"
		            style="@style/ResultText"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@{resultScreenModel.resultText4}"
		            android:visibility="gone" />

	            <ProgressBar
		            android:id="@+id/progressBar4"
		            style="?android:attr/progressBarStyleHorizontal"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:max="100"
		            android:progress="@{resultScreenModel.progress4}"
		            android:scrollbarStyle="outsideInset"
		            android:visibility="gone" />

	            <TextView
		            android:id="@+id/result_object_5"
		            style="@style/ResultText"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@{resultScreenModel.resultText5}"
		            android:visibility="gone" />

	            <ProgressBar
		            android:id="@+id/progressBar5"
		            style="?android:attr/progressBarStyleHorizontal"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:max="100"
		            android:progress="@{resultScreenModel.progress5}"
		            android:scrollbarStyle="outsideInset"
		            android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>